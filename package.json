{
  "name": "dealdecision-ai",
  "version": "0.0.0",
  "private": true,
  "packageManager": "pnpm@9.12.0",
  "scripts": {
    "dev": "pnpm --filter api dev",
    "build": "pnpm -r build",
    "typecheck": "pnpm -r typecheck",
    "infra:up": "docker compose -f infra/docker-compose.yml up -d",
    "infra:down": "docker compose -f infra/docker-compose.yml down",
    "db:migrate": "pnpm --filter api db:migrate",
    "validate:llm": "tsx scripts/validate-llm-config.ts",
    "rerun:analysis:all": "tsx scripts/rerun-analysis-all-deals.ts",
    "verify:documents:all": "tsx scripts/verify-documents-all-deals.ts",
    "reprocess:extraction:all": "tsx scripts/reprocess-extraction-all-deals.ts",
    "rebuild:deals": "tsx scripts/rebuild-deals.ts",
    "smoke:analyst-evidence": "tsx apps/api/scripts/smoke-test-analyst-evidence.ts",
    "smoke:analyst-evidence:docker": "pnpm smoke:analyst-evidence --api-base-url http://localhost:9000",
    "refresh:extraction:analysis:all": "tsx scripts/refresh-extraction-analysis-all-deals.ts"
  },
  "devDependencies": {
    "@jest/globals": "^30.2.0",
    "@types/cli-progress": "^3.11.6",
    "@types/node": "^20.10.0",
    "@types/pg": "^8.15.5",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "@dagrejs/dagre": "^1.1.8",
    "@xyflow/react": "^12.10.0",
    "cli-progress": "^3.12.0",
    "form-data": "^4.0.5",
    "pg": "^8.16.3"
  },
  "pnpm": {
    "overrides": {
      "canvas": "npm:@napi-rs/canvas@0.1.84"
    }
  }
}
